{
  "name": "rifky-landing",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite dev",
    "dev:backend": "cd packages/backend && bun run dev:worker",
    "bootstrap": "bun install",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run",
    "build:deploy": "npm run build && cp CNAME build/CNAME && gh-pages -d build -b gh-pages ",
    "deploy": "cp CNAME build/CNAME && gh-pages -d build -b gh-pages"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.43.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.13",
    "@vitest/browser": "^3.2.4",
    "gh-pages": "^6.3.0",
    "mdsvex": "^0.12.6",
    "playwright": "^1.55.1",
    "sharp": "^0.34.4",
    "svelte": "^5.39.5",
    "svelte-check": "^4.3.2",
    "svgo": "^4.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-image-optimizer": "^2.0.2",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  },
  "dependencies": {
    "@lucide/svelte": "^0.545.0",
    "@tanstack/svelte-query": "^6.0.17",
    "gsap": "^3.14.2",
    "svelte-sonner": "^1.0.7"
  }
}
